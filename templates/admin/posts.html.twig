{% extends 'base.html.twig' %}

{% block title %}Gestion des Articles{% endblock %}

{% block body %}
    <div class="container-fluid px-4">
        <h1 class="mt-4">Gestion des articles</h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item"><a href="{{ path('admin_dashboard') }}">Dashboard</a></li>
            <li class="breadcrumb-item active">Gestion des articles</li>
        </ol>
        <div class="row mt-5">
            <div class="col-8 mx-auto">
                <div class="card mb-4">
                    <div class="card-body">
                        {% include 'components/_alert.html.twig' %}
                        <table id="datatablesSimple">
                            <thead>
                            <tr>
                                <th>ID</th>
                                <th>Titre</th>
                                <th>Image</th>
                                <th>Rédacteur</th>
                                <th>Catégories</th>
                                <th>Date</th>
                                <th>&Eacute;tat</th>
                                <th>Modifier</th>
                                <th>Supprimer</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for post in posts %}
                                <tr>
                                    <td>{{ post.id }}</td>
                                    <td>{{ post.title }}</td>
                                    <td>
                                        <img src="{{ asset('uploads/posts/' ~ post.image) }}"
                                             style="width: 5rem"
                                             alt="{{ post.title }}">
                                    </td>
                                    <td>{{ post.author.fullname }}</td>
                                    <td>{{ post.category.name }}</td>
                                    <td>{{ post.createdAt|date('d/m/Y') }}</td>
                                    <td>{{ post.active }}</td>
                                    <td>
                                        <a class="btn btn-warning" href="#"><i class="fas fa-pen"></i></a>
                                    </td>
                                    <td>
                                        <a class="btn btn-danger" href="#"><i class="fas fa-trash"></i></a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}






